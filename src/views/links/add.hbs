<div class="container">
    <div class="container-form__link">
        <div class="main-title__link">{{Action}}</div>
        <form action="/links/add" method="POST">
            <div class="fields">
                <div class="group-input">
                    <i class="far fa-eye"></i>
                    <input type="text" id="txtTitleLink" name="title" required minlength="4" maxlength="20" placeholder="Title" autocomplete="on" autofocus>
                </div>
                <div class="group-input">
                    <i class="fas fa-globe"></i>
                    <input type="text" name="url" placeholder="LINK" required>
                </div>
                <div class="group-textarea">
                    <i class="far fa-edit"></i>
                    <textarea id= "description" minlength="4" maxlength="100" name="description" rows="2" placeholder="Description" required></textarea>
                </div>                
            </div>
            <button type="submit" class="submitButton" id="saveButton">
                Save
            </button>
        </form>
    </div>
</div>


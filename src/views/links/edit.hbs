<div class="container">
    <div class="container-form">
        <div class="logo"></div>
        <div class="main-title">Favorites Links</div>
        <div class="sub-title">{{Action}}</div>
        <form action="/links/edit/{{link.id}}" method="POST" id= "formLink">
            <div class="fields">
                <div class="group-input">
                    <i class="far fa-eye"></i>
                    <input type="text" name="title" required minlength="4" maxlength="20" autocomplete="on" value = "{{link.title}}" autofocus >
                </div>
                <div class="group-input">
                    <i class="fas fa-globe"></i>
                    <input type="url" name="url" value = "{{link.url}}" required> 
                </div>
                <div class="group-textarea">
                    <i class="far fa-edit"></i>
                    <textarea minlength="4" maxlength="100" name="description" rows="2" required>{{link.description}}</textarea>
                </div>                
            </div>
            <button type="submit" class="submitButton">
                Save
            </button>
        </form>
    </div>
</div>
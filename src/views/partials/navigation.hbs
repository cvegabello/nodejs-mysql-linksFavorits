<script>
    const _dd_menu = document.querySelector(".dd_menu");
    const _dd_menu_links = document.querySelector(".dd_menu_links");
    const _li_main_group = document.querySelector(".li_main_group");
    const _nav_links_dropdown = document.querySelector(".nav-links_dropdown");
    const _icon_arrow = document.getElementById("icon_arrow");

    _dd_menu_links.style.display = "none";
    _dd_menu.style.display = "none";
    _li_main_group.addEventListener("click", function () {
        if (_dd_menu.style.display == "none"){
            _dd_menu.style.display = "flex";
            _icon_arrow.classList = 'fas fa-chevron-up'
        }else {
            _dd_menu.style.display = "none";
            _icon_arrow.classList = 'fas fa-chevron-down'
        };
        if (_dd_menu_links.style.display == "flex"){
            _dd_menu_links.style.display = "none";
        };
    });

    _nav_links_dropdown.addEventListener("click", function () {
        if (_dd_menu_links.style.display == "none"){
            _dd_menu_links.style.display = "flex";
        }else {
            _dd_menu_links.style.display = "none";
        };
        if (_dd_menu.style.display == "flex"){
            _dd_menu.style.display = "none";
            _icon_arrow.classList = 'fas fa-chevron-down'
        };
    });

